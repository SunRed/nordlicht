# Maintainer: Sebastian Morr <sebastian@morr.cc>

pkgname=mediabarcode
pkgver=0.0.1
pkgrel=1
pkgdesc="C library for creating video barcodes"
arch=('i686' 'x86_64')
url=""
license=('GPL')
depends=('ffmpeg')
makedepends=('cmake')
optdepends=()
options=()
source=($pkgname-$pkgver.tar.gz)
noextract=()
md5sums=()

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
