# Maintainer: Sebastian Morr <sebastian@morr.cc>
pkgname=mediabarcode
pkgver=0.01
pkgrel=1
epoch=
pkgdesc=""
arch=('any')
url=""
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($pkgname-$pkgver.tar.gz)
noextract=()
md5sums=()

build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  cd build
  make DESTDIR="$pkgdir/" install
}

